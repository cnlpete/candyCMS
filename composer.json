{
  "name": "candycms/main",
  "type": "library",
  "description": "candyCMS main package",
  "keywords": ["php", "candy", "cms"],
  "homepage": "http://www.candycms.com",
  "license": "MIT",

  "repositories":
  [
    {
      "type": "package",
      "package": {
        "name": "recaptcha/recaptcha",
        "version": "1.11",
        "dist": {
          "url": "http://recaptcha.googlecode.com/files/recaptcha-php-1.11.zip",
          "type": "zip"
        },
        "source": {
          "url": "http://recaptcha.googlecode.com/svn/",
          "type": "svn",
          "reference": "trunk/recaptcha-plugins/php/"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "tinymce/tinymce",
        "version": "4.0.10",
        "dist": {
          "url": "http://download.moxiecode.com/tinymce/tinymce_4.0.10.zip",
          "type": "zip"
        }
      }
    }
  ],

  "require": {
    "php": ">=5.3.0",

    "candycms/core": "4.0.*@dev",
    "candycms/plugins": "4.0.*@dev",

    "recaptcha/recaptcha": "1.*",
    "tinymce/tinymce": "4.0.10"
  },

  "require-dev": {
    "candycms/tests": "4.0.*@dev"
  }
}